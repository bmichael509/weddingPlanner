@model WeddingPlanner.Models.Login
<form asp-action="LoginUser" asp-controller="Home" method="post">
    <div class="form-group row">
        <span class="col-sm-8 offset-sm-4 text-danger" asp-validation-for="LoginEmail"></span>
        <label asp-for="LoginEmail" class="col-sm-4"></label>
        <input asp-for="LoginEmail" class="col-sm-8 form-control">
    </div>
    <div class="form-group row">
        <span class="col-sm-8 offset-sm-4 text-danger" asp-validation-for="LoginPassword"></span>
        <label asp-for="LoginPassword" class="col-sm-4"></label>
        <input asp-for="LoginPassword" class="col-sm-8 form-control">
    </div>
    <div class="form-group row">
        <input type="submit" value="Log In" class="col-sm-4 offset-sm-4 btn btn-primary">
    </div>
</form>