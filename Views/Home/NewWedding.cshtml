@model WeddingPlanner.Models.Wedding
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wedding Planner</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <h1>Plann Your Wedding</h1>
        <a href="/dashboard">Dashboard</a>
        <a href="/logout">Logout</a>
        <form asp-action="CreateWedding" asp-controller="Home" method="post">
            <div class="form-group row">
                <span class="col-sm-8 offset-sm-4 text-danger" asp-validation-for="One"></span>
                <label asp-for="One" class="col-sm-4"></label>
                <input asp-for="One" class="col-sm-8 form-control">
            </div>
            <div class="form-group row">
                <span class="col-sm-8 offset-sm-4 text-danger" asp-validation-for="Two"></span>
                <label asp-for="Two" class="col-sm-4"></label>
                <input asp-for="Two" class="col-sm-8 form-control">
            </div>
            <div class="form-group row">
                <span class="col-sm-8 offset-sm-4 text-danger" asp-validation-for="Date"></span>
                <label asp-for="Date" class="col-sm-4"></label>
                <input asp-for="Date" class="col-sm-8 form-control">
            </div>
            <div class="form-group row">
                <span class="col-sm-8 offset-sm-4 text-danger" asp-validation-for="Address"></span>
                <label asp-for="Address" class="col-sm-4"></label>
                <input asp-for="Address" class="col-sm-8 form-control">
            </div>
            <div class="form-group row">
                <input type="submit" value="Create" class="col-sm-4 offset-sm-4 btn btn-primary">
            </div>
        </form>
    </div>
</body>
</html>